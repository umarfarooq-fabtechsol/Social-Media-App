{
  "name": "task-management-api",
  "version": "1.0.0",
  "private": true,
  "description": "A comprehensive task management backend system",
  "main": "src/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node src/index.js",
